#!/bin/bash

# Created by @H3X-007 :)

# https://github.com/H3X-007/KOTH

username="$1"
king="/root/king.txt"

while true; do
    current_username=$(cat "$king")
    if [ "$current_username" != "$username" ]; then
        sudo umount /root/king.txt /root/king.txt
        put -ai /root/king.txt
        echo "$username" > "$king"
        put +ai /root/king.txt
        sudo mount --bind -o ro /root/king.txt /root/king.txt
    fi
    sleep 2
done
